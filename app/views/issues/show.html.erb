<%- model_class = Issue -%>
<div class="page-header">
  <h1><%#=t '.title', :default => model_class.model_name.human.titleize %>Alternativas Quest√£o</h1>
</div>


  <strong><%= model_class.human_attribute_name(:inunciation) %>:</strong>
  <h5><%= @issue.inunciation %></h5><br>




<h4>Alternativas</h4>
<table>

<% @issue.alternatives.each do |alternativa| %>

  <tr>
    <% if alternativa.correct %>
    <td><strong><%= alternativa.description %> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</strong></td>
    <%else%>
    <td><%= alternativa.description %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</td>
    <%end%>
    <td><%= link_to 'Apagar Alternativa', [alternativa.issue, alternativa],
               :confirm => 'Tem certeza?',
               :method => :delete %></td>
  </tr>

  

<% end %>
</table>
 <br>
<h4>Adicione uma alternativa:</h4>
<%= form_for([@issue, @issue.alternatives.build]) do |f| %>
  <div class="controls">
    <%= f.label :description %><br />
    </div>
    <div class="controls">
    <%= f.text_field :description, :class => 'form-control' %>
  </div>
  <div class="controls">
    <%= f.label :correct %><br />
    </div>
    <div class="controls">
    <%= f.check_box :correct, {}, true, false %>
  </div>
  <div class="actions">
     <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>
 
<br />



