<%= form_for @issue, :html => { :class => "form-horizontal issue" } do |f| %>

    <% if @issue.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @issue.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :inunciation, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :inunciation, :class => 'form-control' %>
    </div>
    <%= error_span(@issue[:inunciation]) %>
  </div>
  <div class="control-group">
    <%= f.label :tipo, :class => 'control-label' %>
    <div class="controls">
      <%= select("issue", "tipo",
                options_for_select([["Verdadeiro e Falso", "VF"],["Múltipla Escolha","M"]]),
                {include_blank: true})  %>
    </div>
    <%= error_span(@issue[:tipo]) %>
  </div>
  <div class="control-group">
    <%= f.label :dificulty, :class => 'control-label' %>
    <div class="controls">
       <%= select("issue", "dificulty",
                options_for_select([["Fácil", "F"],["Intermediária","I"],["Difícil","D"]]),
                {include_blank: true})
  %>
    </div>
    <%= error_span(@issue[:dificulty]) %>
  </div>
  <div class="control-group">
    <%= f.label :subject_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.grouped_collection_select( :subject_id, current_user.teacher.disciplines, :subjects, :name, :id , :name, include_blank: true) %>
    </div>
    <%= error_span(@issue[:subject_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            issues_path, :class => 'btn btn-default' %>

<% end %>
