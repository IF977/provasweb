<%= form_for @discipline, :html => { :class => "form-horizontal discipline" } do |f| %>

    <% if @discipline.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@discipline.errors.count, "error") %> prohibited this discipline from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @discipline.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@discipline[:name]) %>
  </div>
  <div class="control-group">
  <%= f.hidden_field :teacher_id, :value=>current_user.teacher.id %>
    <%= error_span(@discipline[:teacher_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            disciplines_path, :class => 'btn btn-default' %>

<% end %>
