<%= form_for(@quest) do |f| %>
  <% if @quest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quest.errors.count, "error") %> prohibited this quest from being saved:</h2>

      <ul>
      <% @quest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :level %><br>
    
    
    <%= f.number_field :level %>
  </div>
  <div class="field">
    <%= f.label :discipline_id %><br>
      <%= f.collection_select(:discipline_id, Discipline.all, :id, :name, include_blank: true) %>
  </div>
  <div class="field">
    <%= f.label :subject_id %><br>
    <%= 
    
    # teste de um if para poder realizar filtro especifico
     f.collection_select(:subject_id, Subject.all, :id, :name, include_blank: true)
    %>
  </div>
  <div class="field">
    <%= f.label :question %><br>
    <%= f.text_area :question %>
  </div>
  <div class="field">
    <%= f.hidden_field :teacher_id, :value=>current_user.id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
